<html>

<head>
    <title>ADMIN PAGE</title>
    <link rel="stylesheet" href="/css/admin.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://kit.fontawesome.com/2b98a38ab2.js" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="/js/admin.js"></script>
</head>

<body>
    {{>header}}
    
    <div>
        <button class="deletebtn" id="deletebtn">Delete</button>
        <button class="addbtn" id="addadminbtn">Add admin</button>
        <button class="editbtn" id="editbtn">Edit</button>
    </div>

    <div class="table">
        <table>
            <thead>
                <tr>
                    <th class="th1">NAME</th>
                    <th class="th2">EMAIL</th>
                    <th class="th3">SELECT</th>
                </tr>
            </thead>

            <tbody>
                {{#each adminArr}}
                    <tr>
                        <td>{{this.name}}</td>
                        <td>{{this.email}}</td>
                        <td><input type="checkbox" id="{{this.id}}"></td>
                    </tr>
                {{/each}}
            </tbody>

        </table>
    </div>
</body>

</html>